<div class="col-md-6 col-md-offset-3 row well">

<form class="task-form" action="/tasks/<%= @task.id %>" method="post">
  <input type="hidden" name="_method" value="put">
  <p>Update the existing task:</p>
  <input class="form-control" value="<%= @task.title %>" type="text" name="task[title]"/><br>
  <textarea class="form-control" placeholder="Task Description"
 name="task[description]"><%= @task.description %></textarea><br>
  <input class="btn btn-success" type="submit" value="Submit"/>
</form>
</div>
